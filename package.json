{
  "name": "@qwp0905/functional-stream",
  "version": "0.2.4",
  "description": "",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc --build tsconfig.json",
    "format": "prettier --config .prettierrc --write \"{src,test}/**/*.{ts,js}\"",
    "lint": "eslint \"{src,test}/**/*.{ts,js}\"",
    "test": "jest",
    "test:cov": "rimraf coverage && jest --coverage",
    "test:cov:result": "yarn test:cov && open ./coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwp0905/functional-stream.git"
  },
  "author": "qwp0905",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/qwp0905/functional-stream/issues"
  },
  "homepage": "https://github.com/qwp0905/functional-stream#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@yarnpkg/pnpify": "^4.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "<rootDir>/test"
    ],
    "testRegex": "^.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(t|j)s",
      "!<rootDir>/src/@types/**/*",
      "!<rootDir>/**/*/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "verbose": true,
    "moduleNameMapper": {
      "^(.*)\\.js$": "$1"
    }
  },
  "packageManager": "yarn@4.2.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
